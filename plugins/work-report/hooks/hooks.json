{
  "description": "工作目录保护：阻止改变工作目录的 cd 命令，确保多项目工作流的稳定性",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/pre-bash.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
